org.broadinstitute.transporter {

    kafka {
        bootstrap-servers = ["{{env "KAFKA_BOOTSTRAP_URL"}}"]
        application-id = "{{env "KAFKA_APPLICATION_ID"}}"
        max-message-size-mib = {{env "KAFKA_MAX_MESSAGE_SIZE_MIB"}}

        topics {
            request-topic = "{{env "REQUEST_TOPIC"}}"
            progress-topic = "{{env "PROGRESS_TOPIC"}}"
            result-topic = "{{env "RESULT_TOPIC"}}"
        }

        tls {
            truststore-path = "{{env "KAFKA_CLUSTER_TRUSTSTORE_PATH"}}"
            truststore-password = "{{env "KAFKA_CLUSTER_TRUSTSTORE_PASSWORD"}}"
        }
        scram {
            username = "{{env "KAFKA_SCRAM_USERNAME"}}"
            password = "{{env "KAFKA_SCRAM_PASSWORD"}}"
            hash-algorithm = "{{env "KAFKA_SCRAM_ALGORITHM"}}"
        }
    }

    runner-config {
        mib-per-step = {{env "MIB_PER_TRANSFER_STEP"}}
        max-concurrent-reads = {{env "MAX_CONCURRENT_READS"}}

        sftp {
            host = "{{env "SFTP_HOST"}}"
            port = {{env "SFTP_PORT"}}
            username = "{{env "SFTP_USER"}}"
            password = "{{env "SFTP_PASSWORD"}}"
        }

        gcs-service-account = "{{env "GCS_WRITER_SA_KEY_PATH"}}"
    }
}
