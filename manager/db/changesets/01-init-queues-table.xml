<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="danmoran">

        <createTable tableName="queues">
            <column name="id" type="uuid">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(250)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="request_topic" type="varchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="response_topic" type="varchar(250)">
                <constraints nullable="false" />
            </column>
            <column name="request_schema" type="json">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex tableName="queues" indexName="queue-name">
            <column name="name" type="varchar(250)" />
        </createIndex>

        <rollback>
            <dropTable tableName="queues" />
        </rollback>
    </changeSet>

</databaseChangeLog>
